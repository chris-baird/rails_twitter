<ul class="nav nav-pills">
  <li role="presentation"><%= link_to "Home", root_path%></li>
  <li role="presentation"><%= link_to "View Tweets", tweets_path%></li>
  <li role="presentation" class="active"><%= link_to "New Tweet", new_tweet_path%></li>
</ul>

<div class="jumbotron text-center">
  <h1>Make new tweet</h1>
</div>

<%= form_for @tweet do |f| %>

  <div>
    <%= f.label :handle %>
    <%= f.text_field :handle %>
  </div>

  <div>
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <%= f.submit "submit tweet" %>
<% end %>

<%= link_to "home", tweets_path%>
