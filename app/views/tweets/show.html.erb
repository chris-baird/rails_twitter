<ul class="nav nav-pills">
  <li role="presentation"><%= link_to "Home", root_path%></li>
  <li role="presentation" class="active"><%= link_to "View Tweets", tweets_path%></li>
  <li role="presentation"><%= link_to "New Tweet", new_tweet_path%></li>
</ul>

<div class="jumbotron text-center">
  <h1>WDI Twitter</h1>
</div>




<div class="panel panel-default tweet">
  <div class="panel-heading tweet">
    <h3 class="panel-title tweet"><%= @tweet.handle %></h3>
  </div>
  <div class="panel-body tweet">
  <%= @tweet.created_at.localtime.strftime(" %I:%M %P %b, %-d, %Y") %>
  <br>
    <%= @tweet.content %>
    <br>
    <%= link_to "Edit", edit_tweet_path(@tweet)%>
    <%= link_to "Delete", tweet_path(@tweet), method: :delete, data: { confirm: "are you sure you want to delete this Tweet?"} %>
    <%= link_to "Go Back", tweets_path(@tweet)%>
  </div>
</div>
