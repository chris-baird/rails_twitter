<ul class="nav nav-pills">
  <li role="presentation"><%= link_to "Home", root_path%></li>
  <li role="presentation"><%= link_to "View Tweets", tweets_path%></li>
  <li role="presentation" class="active"><%= link_to "New Tweet", new_tweet_path%></li>
</ul>

<div class="jumbotron text-center">
  <h1>Make new tweet</h1>
</div>

<%= form_for @tweet do |f| %>
  <div class="container jumbotron ">
    <div>
      <%= f.label :handle, :class => 'form-group' %>
      <br>
      <%= f.text_field :handle, :class => 'form-group', :placeholder => "Handle Name:" %>
    </div>

    <div>
      <%= f.label :content, :class => 'form-group' %>
      <br>
      <%= f.text_field :content, :class => 'form-group form-control', :placeholder => "Comment goes here:"%>
    </div>
    <hr>
    <%= f.submit "submit tweet", :class => 'btn btn-success' %>
  </div>
<% end %>
